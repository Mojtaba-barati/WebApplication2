@model shopingcard
@{
    ViewData["Title"] = "جزییات محصول";
    Layout = "~/Areas/customer/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="row">
        <aside class="col-4 border-right">
            <article class="gallery-wrap">
                <div class="img-big-wrap">
                    <div class="text-center mt-4">
                        <a href="#">
                            <img class="img-thumbnail" src="~/img/product/@Model.product.imgurl"  title="@Model.product.title" alt="...">
                        </a>
                    </div>
                </div>
            </article>
        </aside>
        <aside class="col-8">
            <article class="card-body p-5">
                <form method="post" asp-controller="home" asp-action="productdetails" asp-area="customer">
                    <input hidden asp-for="@Model.productid" />
                    <div class="text-center">
                        <h2 class="title mb-3"><<@Model.product.title>> </h2>
                    </div>
                    <hr />
                    <div class="price-detail-wrap">
                        <div class="col-3">
                            
                        </div>
                        <div class="col-9 text-left">
                            <span class="price h4 text-danger">
                                <span class="currency">همین الان با قیمت استثنایی</span><u>@Model.product.price.ToString("#,000")</u><span class="currency">تومان بخرید <span style='font-size:17px;'>&#128293;</span></span>
                            </span>
                        </div>

                    </div>
                    <br />
                    <dl class="item-property">
                        <dt style="color:rgb(120 113 108)">توضیحات</dt>
                        <dd>
                            <small class="text-bg-dark text-bold">
                                @Model.product.Description
                            </small>
                        </dd>
                    </dl>
                    <div class="">
                        <dl>
                            <dt class="" style="color:rgb(120 113 108)">شماره شابک: <b class="text-bold text-dark">@Model.product.isbn</b></dt>
                        </dl>
                        <dl class="param param-feature">
                            <dt style="color:rgb(120 113 108)">نام نویسنده: <b class="text-bold text-dark">@Model.product.another</b></dt>
                        </dl>
                       
                        <dl class="param param-feature">
                            <dt style="color:rgb(120 113 108)">قیمت +50 عدد: <b class="text-bold text-dark">  @Model.product.price50.ToString()<span>000 تومان</span> </b></dt>
                        </dl>
                        <dl class="param param-feature">
                            <dt style="color:rgb(120 113 108)">قیمت +100 عدد: <b class="text-bold text-dark">  @Model.product.price100.ToString()<span>000 تومان</span></b></dt>
                        </dl>
                        <hr>
                    </div>
                    <div class="row pl-2">
                        <div class="col-4 text-warning"><h6>چه تعدادی نیاز داری؟</h6></div>
                        <div class="col-8"><input asp-for="count" class="form-control" /></div>
                    </div>
                    <br />
                    <div class="text-left">
                        <button type="submit" class="btn btn-lg btn-primary text-uppercase "> خرید کتاب </button>
                    </div>
                </form>
            </article>
        </aside>
    </div>
</div>
