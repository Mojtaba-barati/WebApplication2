@model IEnumerable<shopingcard>
@{
    ViewData["Title"] = "مدیریت سبد خرید";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}




<div class="Container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2>
                لیست سبد های خرید
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ShoppingCart" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> ایجاد سبدخرید جدید
            </a>
        </div>
    </div>
    <br />

    <table class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>
                    نام کاربر
                </th>
                <th>
                    نام محصول
                </th>
                <th>
                    تعداد
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="33%">
                       @obj.applicationuserid
                    </td>
                    <td width="33%">
                        @obj.product.title
                    </td>
                    <td width="30%">
                        @obj.count
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="ShoppingCart" asp-action="edit" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil-square"></i> ویرایش
                            </a>
                            <a asp-controller="ShoppingCart" asp-action="delete" asp-route-id="@obj.Id">
                                <i class="bi bi-trash3"></i> حذف
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

