@model IEnumerable<catigory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<partial name="notifation" />
<div class="container  p-3">

	<div class="row pt-4">
		<div class="col-6">
			<h2>
				لیست دسته ها
			</h2>
		</div>
		
		<div class="text-end"  dir="ltr">
			<a asp-controller="category" asp-action="creat" class="btn btn-success">
				اضافه کردن به لیست
			</a>
		</div>

	</div>
	<br />



	<table class="table table-striped table-bordered table-hover table-sm border-5 border-dark" style="width:100%">
		<thead>
			<tr>
				<th>
					شماره
				</th>
				<th>
					موضوع کتاب
				</th>
				<th>
					ترتیب دسته
				</th>
				<th >
					
				</th>
				<th>
					
				</th>
				
				
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			
			{
				<tr>
					<td with="5%">
						@obj.id
					</td>

					<td width="45%">
						@obj.name
					</td>

					<td width="30%">
						@obj.desplayorder
					</td>
					
					<td>
						<div class="btn btn-info px-lg-0 ">
							<a asp-area="admin" asp-controller="category" asp-action="edit" asp-route-id="@obj.id">
								<span class="btn text-white">ویرایش</span>
							</a>
						</div>
					</td>
					<td>
						<div class="btn btn-danger px-lg-0" role="group">
							<a asp-area="admin" asp-controller="category" asp-action="remove" asp-route-id="@obj.id">
								<span class="btn text-white">حذف</span>
							</a>
						</div>
					</td>
				</tr>
				
			}
		</tbody>
	</table>

</div>

